<h1>Add post</h1>
<%= form_for :post, url: posts_path do |f| %>
	<% if @post.errors.any? %>
		<% @post.errors.full_messages.each do |msg| %>
			<div class="alert alert-danger"><%= msg %></div>
		<% end %>
	<% end %>
<div>
	<p style="
	position: relative;
	padding-top: 3%;
	padding-left: 5%;
	padding-right: 5%;
	">
		<%= f.label :title %><br>
		<%= f.text_field(:title, {:class => 'form-control'}) %>
	</p>
</div>

<div>
	<p style="
	position: relative;
	padding-left: 5%;
	padding-right: 5%;
	">
		<%= f.label :body %><br>
		<%= f.text_area(:body, {:class => 'form-control'}) %>
	</p>
</div>

<div>
	<p style="
	position: relative;
	padding-left: 5%;
	">
		<%= f.submit({:class => 'btn btn-primary'}) %>
	</p>
<% end %>

